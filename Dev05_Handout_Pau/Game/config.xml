<!-- Config file for the game -->

<config>
  <app>
    <title>Game Development Testbed</title>
    <organization>UPC</organization>
  </app>
	
  <renderer>
    <vsync value="true"/>
    <camera offsetx="198" offsety="128"/>
  </renderer>

  <window>
    <resolution width="1024" height="768" scale="1"/>
    <fullscreen value="false"/>
    <borderless value="false"/>
    <resizable value="false"/>
    <fullscreen_window value="false"/>
  </window>

  <file_system>
    <path>data.zip</path>
  </file_system>

  <map>
    <folder>maps/</folder>
  </map>

  <scene>
    <map name="FirstLevel.tmx" />
    <map name="SecondLevel.tmx" />
  </scene>

  <player>
    <folder>textures/</folder>
    <sprite_sheet source="adventurer-v1.5-Sheet.png"/>
    <initialPosition x="20" y="450" orientation="right"/>
    <speed MaxSpeed= "2" Speedx= "0.5" Speedy= "0.6"/>
    <gravity value= "0.25"/>
  </player>

</config>